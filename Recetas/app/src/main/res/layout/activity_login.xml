<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/degradado">

    <EditText
        android:id="@+id/edtNombreLogin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/personainiciosesion"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="164dp" />

    <EditText
        android:id="@+id/edtContraseñaLogin"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/edtNombreLogin"
        android:layout_alignLeft="@+id/edtNombreLogin"
        android:layout_alignParentTop="true"
        android:layout_marginTop="274dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/candadoiniciosesion"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="230dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvEntrarLogin"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="352dp"
        app:cardBackgroundColor="#cf5c7c"
        app:cardCornerRadius="22dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ENTRAR"
                android:textColor="#fff787" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="331dp"
        android:layout_height="222dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/icono" />

    <TextView
        android:id="@+id/txvRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="79dp"
        android:text="¿Aún no tienes cuenta? Regístrate"
        android:textColor="@android:color/background_dark" />

</RelativeLayout>